{
  "ConnectionStrings": {
    "ITTConnectionString": "Server=mssqldb;Initial Catalog=ITT;User ID=sa;Password=@Password1;",
    "SHRDConnectionString": "Server=mssqldb;Initial Catalog=SHRD;User ID=sa;Password=@Password1;"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  
  "AllowedHosts": "*",
  "RabbitMqConfig": {
    "HostName": "rabbitmq",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "UseConsulDev": "true",
  "SerilogSinkPermission": {
    "IsRollingFile": true,
    "IsSeq": true,
    "IsConsole": true
  },
  "ConsulOptions": {
    "ConsulAddress": "http://consul:8500",
    "ServiceAddress": "http://itt:2200",
    "ServiceName": "ITTService",
    "DisableAgentCheck": true,
    "Tags": []
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithCaller",
      "WithDemystifiedStackTraces"
    ],
    "Properties": {
      "ApplicationName": "ITT"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] [Thread:{ThreadId}] {RequestId}\t{Message:l}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "../tmp/psw_logs/ITT/ITT_.log",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] [Thread:{ThreadId}] {RequestId}\t{Message:l}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "shared": false,
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 120
        }
      }
    ]
  }
}
